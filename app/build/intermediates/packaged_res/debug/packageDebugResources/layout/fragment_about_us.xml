<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/pokemon_logo"
        android:layout_width="200dp"
    android:layout_height="200dp"
    android:src="@drawable/pokemon_logo"
    android:layout_marginBottom="20dp"
    android:contentDescription="Pokemon Logo"
    android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the Pokémon Pokedex App!\n\nThis app allows you to explore and learn more about your favorite Pokémon. Browse through various Pokémon, discover their abilities, types, and other details!\n\n If you never watched Pokemon as a kid, we kinldy ask you to delete our app.\n We wont tolerate such blashphemy!"
        android:textSize="16sp"
        android:textColor="#000000"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
    android:padding="16dp"
    android:textAlignment="center" />

</LinearLayout>
